
OPENAI_API_KEY=sk-your-key
# Configuration Serveur
NODE_ENV=development
PORT=3000

# Dossiers de stockage
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
DOWNLOAD_DIR=./public/downloads

# Limites de fichiers
MAX_FILE_SIZE=10737418240
ALLOWED_EXTENSIONS=mp4,avi,mov,mkv,webm,mp3,wav,m4a

# Configuration de sécurité
RATE_LIMIT_WINDOW=300000
RATE_LIMIT_MAX_REQUESTS=10

# Configuration FFmpeg (optionnel)
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# Configuration de debug
DEBUG_UPLOADS=true
VERBOSE_LOGGING=true

# Configuration CORS
CORS_ORIGIN=http://localhost:3000

# Configuration des timeouts (en millisecondes)
SERVER_TIMEOUT=0
KEEP_ALIVE_TIMEOUT=300000
HEADERS_TIMEOUT=310000